---
// src/components/Footer.astro
import { Button } from "@/components/ui/button";
import { Shield, HeartIcon } from "lucide-react";

const currentYear = new Date().getFullYear();

// Define navigation links
const pages = [
  { href: "/", label: "Home" },
  { href: "/faq", label: "FAQ" },
  { href: "/signup", label: "Sign Up" },
];

const socials = [{ href: "https://github.com/kildall", label: "Github" }];

const legal = [
  { href: "/privacy", label: "Privacy Policy" },
  { href: "/terms", label: "Terms and Conditions" },
];
---

<footer class="py-12 px-4 md:px-6 bg-background z-10">
  <div class="container mx-auto max-w-7xl">
    <div class="flex flex-col md:flex-row justify-around">
      <div class="mb-8 md:mb-0">
        <a href="/" class="flex items-center gap-2">
          <Shield className="icon-class w-8" />
          <h2 class="text-lg font-bold">StackedLayer</h2>
        </a>
        <div class="mt-4">
          <Button variant="secondary">
            Built with <HeartIcon className="icon-class w-3.5" />
            by Kildall
          </Button>
        </div>
        <p class="text-sm dark:text-gray-400 mt-5">
          Â© {currentYear} StackedLayer. All rights reserved.
        </p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        <!-- Pages -->
        <div>
          <h3 class="font-semibold mb-4">Pages</h3>
          <ul class="space-y-2">
            {
              pages.map(({ href, label }) => (
                <li>
                  <a
                    href={href}
                    class="text-gray-600 hover:text-black dark:text-gray-400 dark:hover:text-white"
                  >
                    {label}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>

        <!-- Socials -->
        <div>
          <h3 class="font-semibold mb-4">Socials</h3>
          <ul class="space-y-2">
            {
              socials.map(({ href, label }) => (
                <li>
                  <a
                    href={href}
                    class="text-gray-600 hover:text-black dark:text-gray-400 dark:hover:text-white"
                  >
                    {label}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>

        <!-- Legal -->
        <div>
          <h3 class="font-semibold mb-4">Legal</h3>
          <ul class="space-y-2">
            {
              legal.map(({ href, label }) => (
                <li>
                  <a
                    href={href}
                    class="text-gray-600 hover:text-black dark:text-gray-400 dark:hover:text-white"
                  >
                    {label}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
      </div>
    </div>
  </div>
</footer>
