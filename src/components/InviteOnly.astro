---
import { Card } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Lock } from "lucide-react";

interface Props {}
---

<div class="relative w-full max-w-md mx-auto bg-white z-10 mb-8">
  <Card className="p-6 bg-white/95 backdrop-blur border-[1.5px] border-primary">
    <div class="text-center">
      <Lock className="h-12 w-12 mx-auto text-primary mb-4" />
      <h2 class="text-2xl font-bold mb-4">Invite Only Access</h2>
      <p class="text-muted-foreground mb-6">
        This service is currently invite-only. If you have an invite code,
        please sign up to get started.
      </p>
      <Button className="w-full" size="lg"> Sign Up with Invite </Button>
    </div>
  </Card>
</div>
